@model ABCRetailers.Models.FileUploadModel
@using System.IO
@{
    ViewData["Title"] = "Upload Payment Proof";
    var paymentProofs = ViewBag.PaymentProofs as List<string> ?? new List<string>();
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-upload"></i> Upload Payment Proof</h4>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data" id="uploadForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="ProofOfPayment" class="form-label">
                            <i class="fas fa-file"></i> Select Payment Proof File
                        </label>
                        <input asp-for="ProofOfPayment" class="form-control" type="file"
                               accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" id="fileInput">
                        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i>
                            Accepted formats: PDF, JPG, PNG, DOC, DOCX. Maximum size: 5MB
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="OrderId" class="form-label">Order ID (Optional)</label>
                                <input asp-for="OrderId" class="form-control" placeholder="Enter Order ID">
                                <span asp-validation-for="OrderId" class="text-danger"></span>
                                <div class="form-text">Leave blank if not related to specific order</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CustomerName" class="form-label">Customer Name (Optional)</label>
                                <input asp-for="CustomerName" class="form-control" placeholder="Enter Customer Name">
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                                <div class="form-text">Customer name for easier identification</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary" id="uploadBtn">
                            <i class="fas fa-upload"></i> Upload File
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-undo"></i> Reset Form
                        </button>
                    </div>
                </form>
            </div>
        </div>
